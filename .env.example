# Configurações da API do Sienge
# Configure estas variáveis no Railway Dashboard

# URL base da API do Sienge
SIENGE_BASE_URL=https://api.sienge.com.br

# Subdomínio da sua empresa no Sienge
SIENGE_SUBDOMAIN=sua_empresa

# Credenciais para Basic Auth (alternativa)
SIENGE_USERNAME=seu_usuario
SIENGE_PASSWORD=sua_senha

# API Key do Sienge (método recomendado)
SIENGE_API_KEY=sua_api_key_aqui

# Timeout para requisições HTTP em segundos
REQUEST_TIMEOUT=30

# Ambiente de execução
ENVIRONMENT=production

# Porta para o servidor (Railway define automaticamente)
PORT=8000